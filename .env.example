# Application Configuration
APP_NAME="AI Research Assistant"
APP_VERSION="1.0.0"
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Embedding Model
# Options: sentence-transformers/all-MiniLM-L6-v2 (fast, 384d)
#          sentence-transformers/all-mpnet-base-v2 (better quality, 768d)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu  # Set to "cuda" if GPU available

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=128
MAX_FILE_SIZE_MB=50

# Search Configuration
SEARCH_TOP_K=5
SEARCH_SCORE_THRESHOLD=0.3

# Summarization
SUMMARY_MAX_SENTENCES=3
